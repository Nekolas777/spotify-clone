---
import LibraryIcon from "../../icons/LibraryIcon.astro";
import MoreIcon from "../../icons/MoreIcon.astro";
import PlusIcon from "../../icons/PlusIcon.astro";
import Playlists from "./Playlists.astro";
---

<div
  class='bg-[#121212] pt-1 pl-3 h-full flex-1 overflow-y-hidden rounded-none xl:rounded-lg pb-[118px]'
>
  <div class='pt-5 pl-4 pr-6'>
    <div class='flex flex-row justify-between items-center'>
      <div class='flex flex-row gap-3'>
        <LibraryIcon />
        <span class='text-normal font-medium mb-0.5'>Tu biblioteca</span>
      </div>
      <div class='flex flex-row items-center gap-5'>
        <PlusIcon />
        <figure
          class='-rotate-180 group hover:scale-105 duration-100 transition-all ease-linear cursor-pointer'
          onclick='toggleAsideMenu()'
        >
          <MoreIcon />
        </figure>
      </div>
    </div>
    <div class='mt-5 flex flex-row gap-3'>
      <button
        class='bg-slate-600 px-2.5 pt-1 pb-1.5 rounded-2xl
        text-sm tracking-wide font-medium'
      >
        Playlists
      </button>
      <button
        class='bg-slate-600 px-2.5 pt-1 pb-1.5 rounded-2xl
        text-sm tracking-wide font-medium'
      >
        Artistas
      </button>
    </div>
  </div>
  <Playlists />
</div>

<script>
  function toggleAsideMenu() {
    const asideMenu = document.querySelector("aside");

    if (asideMenu) {
      if (asideMenu.classList.contains("hidden")) {
        asideMenu.classList.remove("hidden");
        asideMenu.classList.add("flex");
      } else if (asideMenu.classList.contains("flex")) {
        asideMenu.classList.remove("flex");
        asideMenu.classList.add("hidden");
      }
    } else {
      console.error("Aside menu not found.");
    }
  }
</script>
