---
import { Image } from "astro:assets";
import AudioActive from "src/icons/AudioActive.astro";

const { playlistId, name, type, author, bannerImg } = Astro.props;
---

<a
  class={`playlist-card flex flex-row gap-3 items-center rounded-[4px] 
        p-2 transition-all duration-150 cursor-pointer`}
  data-id={playlistId}
  href={`/playlist/${playlistId}`}
>
  <div class='flex'>
    <Image
      src={bannerImg}
      class='w-12 h-12 rounded-[4px] object-cover'
      width={48}
      height={48}
      alt={name}
    />
  </div>
  <div class="flex-1 flex justify-between items-center pr-1">
    <div class='flex flex-col gap-0.5 mb-0.5'>
      <p class='tracking-normal font-medium'>{name}</p>
      <div class='flex flex-row items-center gap-2'>
        <span class='text-sm text-[#b3b3b3] font-medium'>
          {type} â€¢ {author}
        </span>
      </div>
    </div>
    <figure class="hidden items-center justify-center w-4 h-4 rounded-full fill-green-500">
      <AudioActive />
    </figure>
  </div>
</a>
