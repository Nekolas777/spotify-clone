---
import { MusicsTable } from "src/components/MusicsTable";
import Download from "src/icons/Download.astro";
import ListIcon from "src/icons/ListIcon.astro";
import { Play } from "src/icons/Play";
import SaveIcon from "src/icons/SaveIcon.astro";
import { Shuffle } from "src/icons/Shuffle";
import Layout from "src/layouts/Layout.astro";
import MoreOptiosnIcon from "../../../icons/MoreOptionsIcon.astro";

const backgroundColor = "#5038A0";
---

<Layout title='Favorites Songs'>
  <section class='@container mt-20 pt-3 relative'>
    <div class='flex flex-row gap-5 px-6 pb-8 relative'>
      <div
        id='banner-playlist-background'
        class='custom-bg absolute -z-[10] w-full h-[350px] left-0 top-0 -mt-[92px]'
        style={`--custom-bg-color: ${backgroundColor};`}
        data-banner-color='#134e4a'
      >
      </div>
      <div class='flex'>
        <img
          src='https://misc.scdn.co/liked-songs/liked-songs-300.jpg'
          class='min-w-32 min-h-32 w-full h-full max-w-56 max-h-56'
          style='box-shadow: 0 4px 60px rgba(0, 0, 0, 0.5);'
        />
      </div>
      <div class='flex flex-col text-white justify-end gap-3 truncate'>
        <span class=''>Lista pública</span>
        <div
          class='relative overflow-hidden whitespace-nowrap @md:overflow-auto @md:whitespace-normal'
        >
          <h1
            class='text-4xl @2xl:text-5xl @4xl:text-6xl font-bold ml-[-3px] inline-block whitespace-nowrap 
            animate-[scroll-loop_20s_linear_infinite] @md:block @md:whitespace-nowrap overflow-hidden @md:animate-none'
          >
            <span>Canciones que te gustan</span>
            <span class='inline @md:hidden'>&nbsp;</span>
            <span class='inline @md:hidden'>Canciones que te gustan</span>
            <span class='inline @md:hidden'>&nbsp;</span>
            <span class='inline @md:hidden'>Canciones que te gustan</span>
            <span class='inline @md:hidden'>&nbsp;</span>
            <span class='inline @md:hidden'>Canciones que te gustan</span>
          </h1>
        </div>
        <span class='text-sm @2xl:text-base'>
          Guarda tus canciones favoritas y escúchalas en cualquier momento.
        </span>
        <div class='flex flex-row gap-2 items-center mt-1.5'>
          <img
            src='https://avatars.githubusercontent.com/u/120282675?v=4'
            class='max-w-5 @2xl:max-w-6 rounded-full'
          />
          <p class='text-sm @2xl:text-base mt-[-2px]'>
            <span class='font-bold'>Nekolas Esteban</span> • 7 canciones, 28 min,
          </p>
        </div>
      </div>
    </div>
    <div class='flex flex-row px-6 py-7 items-center justify-between relative'>
      <div
        id='playlist-background'
        class='custom-bg absolute -z-[10] w-full h-[232px] left-0 top-0'
        style={`--custom-bg-color: ${backgroundColor};`}
      >
      </div>
      <div class='flex flex-row gap-[16px] @md:gap-[20px] items-center'>
        <div
          class='rounded-full bg-green-500 p-[14px] @sm:p-[18px] cursor-pointer flex items-center
          justify-center hover:scale-105 transition-scale duration-200 ease-out'
        >
          <Play />
        </div>
        <figure class='option-icon'>
          <SaveIcon />
        </figure>
        <figure class='option-icon hidden @sm:block'>
          <Shuffle size={7} />
        </figure>
        <figure class='option-icon hidden @md:block'>
          <Download size='7' />
        </figure>
        <figure class='option-icon'>
          <MoreOptiosnIcon />
        </figure>
      </div>
      <div class='flex flex-row gap-3 items-center cursor-pointer group'>
        <span class='font-medium mt-[-1.5px]'>Lista</span>
        <figure
          class='fill-[#B4B4B8] group-hover:fill-white group-hover:text-white transition-all duration-200 ease-out'
        >
          <ListIcon />
        </figure>
      </div>
    </div>
    <MusicsTable type='favorites' client:load />
  </section>
</Layout>
